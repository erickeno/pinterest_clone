<h1>Boards</h1>
<%= link_to fa_icon("plus") + " New Board", new_board_path, class: "btn btn-success" %>

<div>
  <% @boards.each do |board| %>
    <h2><%= link_to board.title, board %></h2>
    <p><%= board.description %></p>
    <%= image_tag(board.image.normal.url) if board.image? %>
  <% end %>
</div>



